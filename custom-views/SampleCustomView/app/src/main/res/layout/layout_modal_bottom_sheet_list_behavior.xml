<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_upload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:drawablePadding="4sp"
        android:text="Behavior 1"
        android:textSize="23sp"
        app:drawableLeftCompat="@drawable/ic_baseline_arrow_forward_24"
        app:drawableStartCompat="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:drawablePadding="4sp"
        android:text="Behavior 2"
        android:textSize="23sp"
        app:drawableLeftCompat="@drawable/ic_baseline_arrow_forward_24"
        app:drawableStartCompat="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_upload"

        />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:drawablePadding="4sp"
        android:text="Behavior 3"
        android:textSize="23sp"
        app:drawableLeftCompat="@drawable/ic_baseline_arrow_forward_24"
        app:drawableStartCompat="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_delete"

        />

</androidx.constraintlayout.widget.ConstraintLayout>