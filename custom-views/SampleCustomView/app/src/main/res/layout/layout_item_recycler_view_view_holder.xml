<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_title_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4sp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rc_item_view_holder"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title 1" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_item_view_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_section"
        tools:itemCount="10"
        tools:listitem="@layout/layout_item_departments" />

</androidx.constraintlayout.widget.ConstraintLayout>

