<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BoardToDrawVerticesView">
        <attr name="vertexMode" format="enum">
            <enum name="triangle" value="0" />
            <enum name="triangleStrip" value="1" />
            <enum name="triangleFan" value="2" />
        </attr>
        <attr format="string" name="drawBehavior" />

    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="backgroundColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="strokeWidthView" format="float" />
        <attr name="paintStyle" format="enum">
            <enum name="Style.STROKE" value="1" />
            <enum name="Style.FILL" value="0" />
            <enum name="Style.FILL_AND_STROKE" value="2" />
        </attr>
        <attr name="android:antialias" />
        <attr name="android:dither" />
    </declare-styleable>

    <declare-styleable name="GridCircles">
        <attr name="quantityCircles" format="integer" />
        <attr name="radiusEachCircle" format="float" />
    </declare-styleable>
</resources>