<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".springphysics.features.start.FirstMoveAnimationActivity">


    <TextView
        android:id="@+id/tv_title_first_sample_object_animator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_title_first_sample_object_animator"
        android:textSize="23sp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/iv_sample_image_to_move"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_first_sample_object_animator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_electrical_services_120"
        />

</androidx.constraintlayout.widget.ConstraintLayout>