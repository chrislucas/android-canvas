<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="canvas.xplorer.com.circularchart.ActivityArcView"
    android:padding="10sp"
    android:weightSum="1">

    <canvas.xplorer.com.circularchart.views.ArcView
        android:id="@+id/arc"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.7"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="00sp"
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:weightSum="1">

        <canvas.xplorer.com.circularchart.views.CustomSeekBar
            android:id="@+id/start_angle"
            android:layout_width="match_parent"
            android:layout_height= "0sp"
            android:layout_weight="0.5"
            android:max="360"
            android:text="@string/start_angle"
            tools:ignore="NestedWeights"
            />

        <canvas.xplorer.com.circularchart.views.CustomSeekBar
            android:id="@+id/sweep_angle"
            android:layout_width="match_parent"
            android:layout_height= "0sp"
            android:layout_weight="0.5"
            android:max="360"
            tools:ignore="NestedWeights"
            />

    </LinearLayout>

</LinearLayout>
