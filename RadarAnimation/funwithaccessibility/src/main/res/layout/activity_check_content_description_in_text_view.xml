<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".views.activities.CheckContentDescriptionInTextViewActivity">

    <TextView
        android:id="@+id/tv_title_accessibility_event"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/hello_world"
        android:text="@string/hello_world"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_title_content_description_runtime"
        />


    <TextView
        android:id="@+id/tv_title_content_description_runtime"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/runtime_content_description"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_accessibility_event"
        />

</androidx.constraintlayout.widget.ConstraintLayout>